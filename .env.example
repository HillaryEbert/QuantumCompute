# =================================================================
# Environment Configuration
# =================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =================================================================

# =================================================================
# Network Configuration
# =================================================================

# Sepolia Testnet RPC URL
# Get free RPC from: https://www.alchemy.com/ or https://infura.io/
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY

# Private Key (WITHOUT 0x prefix)
# IMPORTANT: Use a test wallet with small amounts only
PRIVATE_KEY=your-private-key-here

# Network Configuration
NETWORK=sepolia
CHAIN_ID=11155111

# =================================================================
# Etherscan Configuration
# =================================================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# Verification Wait Confirmations
VERIFICATION_CONFIRMATIONS=6

# =================================================================
# Gas Configuration
# =================================================================

# Gas Price (in Gwei)
GAS_PRICE=20

# Gas Limit
GAS_LIMIT=8000000

# Gas Reporter Configuration
REPORT_GAS=false

# CoinMarketCap API Key for gas cost estimation
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# =================================================================
# Access Control Configuration
# =================================================================

# Default Admin Address
DEFAULT_ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Pauser Role Addresses (comma-separated)
# PauserSet Configuration: Multiple addresses can be assigned pauser role
PAUSER_ADDRESSES=0x0000000000000000000000000000000000000000,0x0000000000000000000000000000000000000001

# Minter Role Addresses (comma-separated)
MINTER_ADDRESSES=0x0000000000000000000000000000000000000000

# Operator Role Addresses (comma-separated)
OPERATOR_ADDRESSES=0x0000000000000000000000000000000000000000

# =================================================================
# Security Configuration
# =================================================================

# Enable/Disable Security Features
ENABLE_ACCESS_CONTROL=true
ENABLE_PAUSABLE=true
ENABLE_REENTRANCY_GUARD=true

# Rate Limiting Configuration
MAX_JOBS_PER_USER=100
MAX_JOBS_PER_BLOCK=50
MIN_BLOCK_BETWEEN_JOBS=1

# Circuit Size Limits (DoS Protection)
MAX_CIRCUIT_SIZE=1000000
MAX_QUBITS=1000
MAX_GATES=100000

# Time Lock Configuration (in seconds)
TIMELOCK_DELAY=86400

# =================================================================
# Performance Configuration
# =================================================================

# Enable Performance Monitoring
ENABLE_GAS_TRACKING=true
ENABLE_PERFORMANCE_METRICS=true

# Performance Thresholds
MAX_GAS_PER_TRANSACTION=3000000
WARNING_GAS_THRESHOLD=2000000

# Cache Configuration
ENABLE_RESULT_CACHE=true
CACHE_TTL=3600

# Batch Processing Configuration
BATCH_SIZE=50
BATCH_INTERVAL=300

# =================================================================
# Testing Configuration
# =================================================================

# Test Network Configuration
TEST_NETWORK=hardhat
TEST_CHAIN_ID=31337

# Test Wallet Configuration
TEST_MNEMONIC=test test test test test test test test test test test junk

# Coverage Configuration
COVERAGE_THRESHOLD=80
ENABLE_COVERAGE_REPORT=true

# =================================================================
# Development Configuration
# =================================================================

# Development Mode
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Compiler Configuration
SOLIDITY_VERSION=0.8.24
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# TypeChain Configuration
TYPECHAIN_TARGET=ethers-v6

# =================================================================
# CI/CD Configuration
# =================================================================

# CI Environment
CI=false

# GitHub Actions Configuration
GITHUB_TOKEN=

# Codecov Configuration
CODECOV_TOKEN=your-codecov-token-here

# =================================================================
# Deployment Configuration
# =================================================================

# Deployment Settings
AUTO_VERIFY=true
SAVE_DEPLOYMENT_INFO=true
DEPLOYMENT_DIR=./deployments

# Contract Initialization Parameters
INITIAL_OWNER=
INITIAL_QUANTUM_STATE=0

# =================================================================
# Monitoring Configuration
# =================================================================

# Enable Monitoring
ENABLE_MONITORING=true

# Metrics Export
METRICS_PORT=9090
METRICS_PATH=/metrics

# Alert Configuration
ALERT_EMAIL=
ALERT_WEBHOOK=

# =================================================================
# FHE (Fully Homomorphic Encryption) Configuration
# =================================================================

# FHE Gateway Configuration
FHE_GATEWAY_URL=https://gateway.fhevm.io
FHE_NETWORK=sepolia

# FHE Library Version
FHE_LIB_VERSION=0.5.0

# Encryption Configuration
ENABLE_FHE=true
FHE_KEY_SIZE=2048

# =================================================================
# Quantum Computing Configuration
# =================================================================

# Quantum Algorithm Settings
DEFAULT_ALGORITHM_TYPE=1
MAX_ALGORITHM_COMPLEXITY=1000000

# Quantum Circuit Configuration
DEFAULT_QUBIT_COUNT=4
MAX_ENTANGLEMENT_PAIRS=100

# Quantum State Configuration
ENABLE_STATE_VALIDATION=true
QUANTUM_NOISE_THRESHOLD=0.01

# =================================================================
# API Configuration
# =================================================================

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# API Keys (if exposing REST API)
API_KEY=
API_SECRET=

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE

# =================================================================
# Database Configuration (Optional)
# =================================================================

# Database Connection (if using off-chain storage)
DATABASE_URL=
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Redis Configuration (if using cache)
REDIS_URL=
REDIS_PASSWORD=
REDIS_DB=0

# =================================================================
# External Services Configuration
# =================================================================

# IPFS Configuration (if storing large data)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Chainlink Configuration (if using oracles)
CHAINLINK_NODE_URL=
CHAINLINK_API_KEY=

# =================================================================
# Security Audit Configuration
# =================================================================

# Audit Logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=./logs/audit.log

# Vulnerability Scanning
ENABLE_SECURITY_SCAN=true
SCAN_INTERVAL=86400

# Security Contact
SECURITY_EMAIL=security@example.com
SECURITY_WEBHOOK=

# =================================================================
# Notes
# =================================================================
#
# 1. SECURITY BEST PRACTICES:
#    - Never commit .env file to version control
#    - Use different keys for development and production
#    - Rotate API keys regularly
#    - Use hardware wallets for mainnet deployment
#    - Enable all security features in production
#
# 2. PAUSER SET CONFIGURATION:
#    - Multiple addresses can be assigned pauser role
#    - Separate addresses with commas in PAUSER_ADDRESSES
#    - Each address can independently pause the contract
#    - Use multisig wallets for production pausers
#
# 3. GAS OPTIMIZATION:
#    - Monitor gas usage with REPORT_GAS=true
#    - Adjust OPTIMIZER_RUNS based on usage patterns
#    - Set appropriate gas limits to prevent DoS
#
# 4. PERFORMANCE MONITORING:
#    - Enable performance metrics in production
#    - Set appropriate thresholds for alerts
#    - Monitor cache hit rates
#
# 5. TESTING:
#    - Use separate network for testing
#    - Never use production keys in tests
#    - Enable coverage reporting during development
#
# =================================================================
