{
  "name": "quantum-privacy-computing-platform",
  "version": "1.0.0",
  "description": "A cutting-edge confidential quantum computing platform leveraging Fully Homomorphic Encryption (FHE) technology",
  "private": false,
  "keywords": [
    "fhevm",
    "fhe",
    "zama",
    "quantum-computing",
    "encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "smart-contracts",
    "web3",
    "cryptography",
    "homomorphic-encryption"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HillaryEbert/QuantumCompute"
  },
  "author": "Quantum Privacy Computing Team",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean && rm -rf cache artifacts typechain-types",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:verbose": "npx hardhat test --verbose",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "deploy:zama": "npx hardhat run scripts/deploy.ts --network zamaDevnet",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "node": "npx hardhat node",
    "typechain": "npx hardhat compile && npx typechain --target ethers-v6 --out-dir typechain-types './artifacts/contracts/**/*.json'",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "accounts": "npx hardhat accounts",
    "balance": "npx hardhat run scripts/checkBalance.ts",
    "dev:frontend": "cd nextjs-app && npm install && npm run dev",
    "build:frontend": "cd nextjs-app && npm install && npm run build",
    "start:frontend": "cd nextjs-app && npm run start",
    "demo": "npx http-server . -p 8080 -c-1 --cors",
    "all:install": "npm install && cd nextjs-app && npm install",
    "all:build": "npm run compile && cd nextjs-app && npm run build",
    "all:clean": "npm run clean && rm -rf node_modules nextjs-app/node_modules",
    "prepare": "npx hardhat compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "chai": "^4.5.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ethers": "^6.9.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
